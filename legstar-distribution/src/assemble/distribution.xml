<assembly>

    <id>bin</id>
    
    <formats>
        <format>zip</format>
    </formats>
  
    <componentDescriptors>
        <componentDescriptor>../legstar-cixsgen/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-messaging/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-invoker/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-c2wsrt/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-chttprt/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-cmqrt/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-cmockrt/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-cobcgen/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-coxbgen/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-csokrt/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-engine/src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-xsdcgen/src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>
    
    <fileSets>

        <!-- cob2xsd dependencies -->
        <fileSet>
            <directory>${project.build.directory}/package/legstar-cob2xsd/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>legstar-cob2xsd-*.jar</include>
                <include>antlr-runtime-*.jar</include>
                <include>commons-cli-*.jar</include>
            </includes>
        </fileSet>

        <!-- Sources file -->
        <fileSet>
            <directory>${project.basedir}/../target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
        </fileSet>

    </fileSets>
  
    <files>
        
        <!-- READ ME FILES -->
        <file>
           <source>${project.basedir}/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-c2wsrt/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>C2WSRT-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-chttprt/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>CHTTPRT-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-cmqrt/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>CMQRT-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-cobcgen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>COBCGEN-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-coxbgen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>COXBGEN-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-csokrt/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>CSOKRT-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-engine/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>ENGINE-README</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-xsdcgen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/docs</outputDirectory>
           <destName>XSDCGEN-README</destName>
        </file>

        <!-- LICENSE FILES -->
        <file>
            <source>${project.basedir}/LICENSE</source>
            <outputDirectory>/</outputDirectory>
        </file>

        <!-- cob2xsd sample COBOL source -->
        <file>
            <source>${project.build.directory}/package/legstar-cob2xsd/cobol/LSFILEAE</source>
            <outputDirectory>samples/quickstarts/adapter_lsfileae/cobol</outputDirectory>
           <destName>lsfileae</destName>
        </file>

        <!-- cob2xsd sample ant script -->
        <file>
            <source>src/main/resources/ant/build-cob2xsd.xml</source>
            <outputDirectory>samples/quickstarts/adapter_lsfileae</outputDirectory>
        </file>

    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>