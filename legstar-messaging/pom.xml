<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.2.6</version>
    </parent>
    <version>1.2.6</version>
    <artifactId>legstar-messaging</artifactId>
    <name>LegStar Messaging Protocol</name>
    <description>Mainframe message exchange protocol.</description>
    <url>http://www.legsem.com/legstar</url>

    <dependencies>
  
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-coxbapi</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
        
            <plugin>
            
                <artifactId>maven-antrun-plugin</artifactId>
                
                <executions>
                
                    <!-- This will deploy the jar file to a Tomcat dev instance.  -->
                    <execution>
                        <id>deploy-to-tomcat</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/../src/main/ant/deploy-to-tomcat.xml">
                                    <property name="legstar-dev-tomcat-base" value="${legstar-dev-tomcat-base}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                   <!-- This will upload the zos sources. -->
                    <execution>
                        <id>deploy-to-zos</id>
                        <phase>generate-test-resources</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/../src/main/ant/deploy-to-zos.xml">
                                    <property name="legstarVersion" value="${legstarVersion}" />
                                    <property name="legstarZosHost" value="${legstar-dev-zos-host}" />
                                    <property name="legstarZosUserid" value="${legstar-dev-zos-userid}" />
                                    <property name="legstarZosPassword" value="${legstar-dev-zos-password}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                     
                </executions>
            </plugin>
        
        </plugins>
    </build>
    
</project>