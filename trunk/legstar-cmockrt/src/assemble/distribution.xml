<assembly>
    <id></id>
    
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>legstar-invoker-config.xml</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.legsem.legstar:${pom.artifactId}:*</include>
                <include>org.json:jsonjava:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
  
</assembly>