<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
    <parent>
      <groupId>com.legsem.legstar</groupId>
      <artifactId>Legstar</artifactId>
      <version>SNAPSHOT</version>
    </parent>
    <version>SNAPSHOT</version>
    <artifactId>legstar-messaging-impl</artifactId>
	<name>Messaging common implementation</name>
	<description>Provides common messaging capabilities.</description>
	<url>http://www.legsem.com/legstar/messaging-impl/</url>

	<dependencies>
	
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>

        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-messaging</artifactId>
        </dependency>
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-coxbrt</artifactId>
        </dependency>
		
        <dependency>
          <groupId>com.legsem.legstar</groupId>
          <artifactId>legstar-jaxbgen-cases</artifactId>
          <scope>test</scope>
        </dependency>
        
        <dependency>
          <groupId>com.legsem.legstar</groupId>
          <artifactId>legstar-coxbgen-cases</artifactId>
          <scope>test</scope>
        </dependency>
        
	</dependencies>

    <build>
        <plugins>
        
            <plugin>
            
                <artifactId>maven-antrun-plugin</artifactId>
                
                <executions>
                
                    <!-- This will deploy the jar file to a Tomcat dev instance.  -->
                    <execution>
                        <id>deploy-to-tomcat</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/deploy-to-tomcat.xml"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                            </goals>
                    </execution>
                
                </executions>
            </plugin>
        
        </plugins>
    </build>
    
</project>