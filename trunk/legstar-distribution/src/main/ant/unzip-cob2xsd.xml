<!-- =================================================================================
     This script gets the legstar-cob2xsd distribution zip file from
     the maven repository and unzips the content to a temporary folder
     so that it is available for packaging as part of legstar-cixsgen.
 -->
<project basedir="../../.." default="unzipCob2Xsd">

    <!-- ===========================================================  -->
    <!-- Setup environment
    -->
    <target name="init">
    
        <!-- Location of legstar-cob2xsd zip file in maven repo -->
        <property name="zip.file" value="${maven.localRepository}/com/legsem/legstar/legstar-cob2xsd/${legstarCob2XsdVersion}/legstar-cob2xsd-${legstarCob2XsdVersion}.zip" />
        <!-- Target directories  -->
        <property name="packaging.dir" value="target/package" />
    
    </target>
    
    <!-- ===========================================================  -->
    <!-- Inzip the legstar-cob2xsd distribution and rename the
         root folder so that it does not include the version
         (makes life easier for the assembly)
    -->
    <target name="unzipCob2Xsd" depends="init">
        <unzip src="${zip.file}" dest="${packaging.dir}"/>
        <move todir="${packaging.dir}/legstar-cob2xsd">
            <fileset dir="${packaging.dir}/legstar-cob2xsd-${legstarCob2XsdVersion}"/>
        </move>    
    </target>
  
</project>
