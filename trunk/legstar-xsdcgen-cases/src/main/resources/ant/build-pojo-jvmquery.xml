<!-- =================================================================================
     This script compiles the Jvmquery POJO sample.
  -->
<project basedir="." default="compile">

    <path id="classpath">
        <fileset dir="${basedir}/../../.." includes="lib/*.jar" />
    </path>

    <target name="compile">
        <mkdir dir="bin"/>
        <javac  target="1.5"
            srcdir="src"
            destdir="bin"
            fork="yes"
            classpathref="classpath"
        />
    </target>

</project>
