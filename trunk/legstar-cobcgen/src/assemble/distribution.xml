<assembly>
    <id>bin</id>
    
    <formats>
        <format>zip</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>

    <fileSets>
    
        <!-- sample java classes for pojo  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-xsdcgen-cases/src/main/java</directory>
            <outputDirectory>samples/quickstarts/proxy_pojo_jvmquery/src</outputDirectory>
            <includes>
                <include>**/jvmquery/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../legstar-jaxbgen-cases/src/main/java</directory>
            <outputDirectory>samples/quickstarts/proxy_pojo_jvmquery/src</outputDirectory>
            <includes>
                <include>**/jvmquery/*.*</include>
            </includes>
        </fileSet>
    
    </fileSets>
  
    <files>
        <!-- sample generation ant scripts  -->
        <file>
            <source>${project.basedir}/../legstar-xsdcgen-cases/src/main/resources/ant/build-pojo-jvmquery.xml</source>
            <outputDirectory>samples/quickstarts/proxy_pojo_jvmquery</outputDirectory>
            <destName>build-pojo.xml</destName>
        </file>

        <file>
            <source>${project.basedir}/../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        <file>
            <source>${project.basedir}/../legstar-cobcgen/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>NOTICE</destName>
        </file>
        <file>
            <source>${project.basedir}/../legstar-cobcgen/src/site/apt/release-notes.apt</source>
            <outputDirectory>/</outputDirectory>
            <destName>README</destName>
        </file>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>