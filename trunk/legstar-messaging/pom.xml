<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.2.0-SNAPSHOT</version>
        <relativePath>../trunk</relativePath>
    </parent>
    <version>1.2.0-SNAPSHOT</version>
    <artifactId>legstar-messaging</artifactId>
    <name>Messaging Protocol</name>
    <description>Mainframe message exchange protocol.</description>

    <dependencies>
  
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>

        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <!-- This is a commons-configuration dependency but it is
             declared optional since 1.5 -->    
        <dependency>
            <groupId>commons-jxpath</groupId>
            <artifactId>commons-jxpath</artifactId>
        </dependency>
      
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    
    </dependencies>

    <build>
        <plugins>
        
            <plugin>
            
                <artifactId>maven-antrun-plugin</artifactId>
                
                <executions>
                
                    <!-- This will deploy the jar file to a Tomcat dev instance.  -->
                    <execution>
                        <id>deploy-to-tomcat</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/deploy-to-tomcat.xml"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                            </goals>
                    </execution>

                </executions>
            </plugin>
        
        </plugins>
    </build>
    
</project>