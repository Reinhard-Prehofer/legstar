<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.3.3-SNAPSHOT</version>
    </parent>
    <version>1.3.3-SNAPSHOT</version>
    <artifactId>legstar-invoker</artifactId>
    <name>LegStar Mainframe Adapter Runtime</name>
    <description>Provide remote procedure call to mainframe programs.</description>
    <url>http://www.legsem.com/legstar</url>

    <dependencies>
  
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>

        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-config</artifactId>
        </dependency>

        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-messaging</artifactId>
        </dependency>
    
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-coxbapi</artifactId>
        </dependency>
    
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-engine</artifactId>
        </dependency>
    
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>jsonjava</artifactId>
        </dependency>

        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-jaxbgen-cases</artifactId>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-coxbgen-cases</artifactId>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-cmockrt</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-coxbrt</artifactId>
            <scope>test</scope>
        </dependency>
    

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                
                    <!-- This will deploy the jar file to a Tomcat dev instance.  -->
                    <execution>
                        <id>deploy-to-tomcat</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/../src/main/ant/deploy-to-tomcat.xml">
                                    <property name="legstar-dev-tomcat-base" value="${legstar-dev-tomcat-base}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                   <!-- This will prepare the zos sources for upload. -->
                    <execution>
                        <id>prepare-deploy-to-zos</id>
                        <phase>generate-test-resources</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/../src/main/ant/prepare-deploy-to-zos.xml">
                                    <property name="legstarZosVersion" value="${legstarZosVersion}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                </executions>
            </plugin>

            <!-- Upload sources and submit JCL. -->
            <plugin>
                <groupId>com.legsem.legstar</groupId>
                <artifactId>zosupload-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>upload-zos-programs</id>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <hostName>${legstar-dev-zos-host}</hostName>
                            <hostUserId>${legstar-dev-zos-userid}</hostUserId>
                            <hostPassword>${legstar-dev-zos-password}</hostPassword>
                            <inputFolder>target/zos</inputFolder>
                            <remoteFilesPrefix>${legstar-dev-zos-pds-pfx}.${legstarZosVersion}</remoteFilesPrefix>
                            <jclFileNames>
                                <jclFileName>C370LCOM</jclFileName>
                                <jclFileName>C370LCTN</jclFileName>
                                <jclFileName>C370CLNK</jclFileName>
                            </jclFileNames>
                        </configuration>
                        <goals>
                            <goal>upload</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
    
</project>