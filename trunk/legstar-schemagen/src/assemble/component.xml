<component>

    <fileSets>

        <!-- Win32 dlls  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/target/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.dll</include>
            </includes>
        </fileSet>
        
        <!-- Linux shared objects  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/src/main/usrlib</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.so</include>
            </includes>
        </fileSet>
        
        <!-- ant scripts  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/src/main/resources/ant</directory>
            <outputDirectory>ant</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>

    </fileSets>
  
    <files>
        <!-- Cobol sample. The name is lowercased to ease build-cob2xs.xml  -->
        <file>
            <source>${project.basedir}/../legstar-schemagen/src/main/zos/cobol/LSFILEAE.cbl</source>
            <outputDirectory>cobol</outputDirectory>
            <destName>lsfileae.cbl</destName>
         </file>
        
        <file>
            <source>${project.basedir}/../legstar-schemagen/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>schemagen-NOTICE</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-schemagen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>schemagen-README</destName>
        </file>
    </files>

</component>