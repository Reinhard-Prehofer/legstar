<assembly>
    <id>bin</id>
    
    <formats>
        <format>zip</format>
    </formats>
 
    <componentDescriptors>
        <componentDescriptor>src/assemble/component.xml</componentDescriptor>
        <componentDescriptor>../legstar-invoker/src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>
  
    <files>
        <file>
            <source>${project.basedir}/../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        </file>
        <file>
            <source>${project.basedir}/../legstar-engine/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>NOTICE</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-engine/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>README</destName>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>