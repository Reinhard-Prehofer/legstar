<!-- =================================================================================
     This script creates the common distribution for all LegStar modules.
 -->
<project basedir="../../.." default="deployToTomcat" name="deploy-to-tomcat">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
    <property file="../legstar-pom/legstar-dev.properties"/>   
	<target name="init">
		
		<!-- Tomcat destination  -->
        <property name="tomcat.lib" value="${tomcat.dir}\shared\lib" />
	 	<property name="tomcat.webapps" value="${tomcat.dir}\webapps" />

	</target>

	<!-- ===========================================================  -->
	<!-- Copy to Shared/lib
	  -->
	<target name="deployToTomcat" depends="init">
		
		<copy todir="${tomcat.lib}">
			<fileset dir="${basedir}/target" includes="*.jar" excludes="*sources.jar"/>
		</copy>
		<copy todir="${tomcat.webapps}">
			<fileset dir="${basedir}/target" includes="*.war"/>
		</copy>

	</target>
	
</project>
