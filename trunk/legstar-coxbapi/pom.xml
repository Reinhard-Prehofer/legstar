<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.2.2-SNAPSHOT</version>
    </parent>
    <version>1.2.2-SNAPSHOT</version>
    <artifactId>legstar-coxbapi</artifactId>
    <name>COBOL Binding Application Programming Interface</name>
    <description>Cobol binding Application Programming Interface.</description>
    <url>http://www.legsem.com/legstar</url>

    <build>
        <plugins>
      
            <!-- Running ANT complementary tasks.  -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                
                    <execution>
                        <!-- This will deploy the jar file to a Tomcat dev instance.  -->
                        <id>deploy-to-tomcat</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/deploy-to-tomcat.xml" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    
                </executions>
            </plugin>
        
        </plugins>
    </build>

</project>