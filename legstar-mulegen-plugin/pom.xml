<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.2.2</version>
        <relativePath>..</relativePath>
    </parent>
    <version>1.2.2</version>
    <artifactId>legstar-mulegen-plugin</artifactId>
    <packaging>jar</packaging>
    <name>LegStar Mule Service Generator Eclipse plugin</name>
    <description>Mule Service Generator Eclipse plugin.</description>
    <url>http://www.legsem.com/legstar</url>
    <properties>
        <muleVersion>1.4.4</muleVersion>
        <legstarMuleVersion>1.0-RC3-SNAPSHOT</legstarMuleVersion>
    </properties>

    <dependencies>
    
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-common-plugin</artifactId>
            <version>${parent.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-cixscom-plugin</artifactId>
            <version>${parent.version}</version>
            <scope>provided</scope>
        </dependency>

         <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-legstar</artifactId>
            <version>1.0-RC3-SNAPSHOT</version>
        </dependency>
         <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-legstar-tools</artifactId>
            <version>1.0-RC3-SNAPSHOT</version>
        </dependency>
         <dependency>
            <groupId>org.mule</groupId>
            <artifactId>mule-core</artifactId>
            <version>1.4.4</version>
        </dependency>
         <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-http</artifactId>
            <version>1.4.4</version>
        </dependency>
    
        <!-- Eclipse dependencies. -->
        <dependency>
            <groupId>org.eclipse.platform</groupId>
            <artifactId>org.eclipse.platform</artifactId>
            <version>3.2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jdt</groupId>
            <artifactId>org.eclipse.jdt.core</artifactId>
            <version>3.2.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.swt</groupId>
            <artifactId>org.eclipse.swt.win32.win32.x86</artifactId>
            <version>3.2.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.ui</groupId>
            <artifactId>org.eclipse.ui.ide</artifactId>
            <version>3.2.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.ant</groupId>
            <artifactId>org.eclipse.ant.ui</artifactId>
            <version>3.2.1</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- This is to prevent Log4j from being part of the
             dependency set. Otherwise, it would end up in the lib
             folder. We don't want to force users to use it. -->
         <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    
    </dependencies>

    <build>

        <plugins>
        
            <!-- See distribution.xml for an explanation on the reasons for the
                 unusual distribution options here.  -->
            <plugin>
                <!-- Update MANIFEST.MF and build.properties with the Maven versions -->
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>maven-to-pde</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/maven-to-pde.xml">
                                    <property name="legstarPluginVersion" value="${legstarPluginVersion}" />
                                    <property name="legstarVersion" value="${legstarVersion}" />
                                    <property name="muleVersion" value="${muleVersion}" />
                                    <property name="legstarMuleVersion" value="${legstarMuleVersion}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
          
            <!-- Copy all runtime dependencies to the lib folder -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.mule.transports</groupId>
                                    <artifactId>mule-transport-legstar</artifactId>
                                    <version>${legstarMuleVersion}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule.transports</groupId>
                                    <artifactId>mule-transport-legstar-tools</artifactId>
                                    <version>${legstarMuleVersion}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule</groupId>
                                    <artifactId>mule-core</artifactId>
                                    <version>${muleVersion}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.mule.transports</groupId>
                                    <artifactId>mule-transport-http</artifactId>
                                    <version>${muleVersion}</version>
                                </artifactItem>
                          </artifactItems>
                       </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    
    </build>
    
</project>