    <fileSets>
    
        <!-- ant scripts  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-xsdcgen/src/main/resources/ant</directory>
            <outputDirectory>ant</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
    
        <!-- sample web service  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-xsdcgen-cases/target/war</directory>
            <outputDirectory>war</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
        
