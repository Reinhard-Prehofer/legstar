<!-- =================================================================================
     This script tests the distribution file. It unzips the distro to a temporary
     location and runs the quickstarts.
 -->
<project basedir="../../.." default="testDistro" name="build-sample">

    <!-- ===========================================================  -->
    <!-- Setup environment
    -->
    <target name="init">
        <xmlproperty file="${basedir}/pom.xml"/>
        
        <!-- Temporary location  -->
        <property name="test.dir" value="target/test-distro" />
        <!-- Distribution name  -->
        <property name="dist.name" value="${project.artifactId}-${project.version}" />
        <!-- Distribution zip file  -->
        <property name="dist.zip" value="${dist.name}-bin.zip" />
        <!-- Distribution file location   -->
        <property name="dist.dir" value="${basedir}/target" />
        <!-- Distribution zip file   -->
        <property name="zip.file" value="${dist.dir}/${dist.zip}" />
        <!-- Sample final destination for schemas  -->
        <property name="sample.schema" value="${basedir}/../legstar-schemagen/src/test/schema" />
        <!-- Distribution sample location   -->
        <property name="sample1.dir" value="${test.dir}/${dist.name}/samples/quickstarts/proxy_ws_cultureinfo" />
        <!-- Distribution sample location   -->
        <property name="sample2.dir" value="${test.dir}/${dist.name}/samples/quickstarts/proxy_pojo_jvmquery" />
    
    </target>

    <!-- ===========================================================  -->
    <!-- Build the samples and store the generated xsds with other
        sample XSDs in the schemagen project
    -->
    <target name="testDistro" depends="init">
        <unzip src="${zip.file}" dest="${test.dir}"/>
        <ant antfile="build-war.xml" dir="${sample1.dir}"/>
        <ant antfile="build-xsd2xs.xml" dir="${sample1.dir}"/>
        <ant antfile="build-pojo.xml" dir="${sample2.dir}"/>
        <ant antfile="build-java2xs.xml" dir="${sample2.dir}"/>
        <copy todir="${sample.schema}">
            <fileset dir="${sample1.dir}/schema"/>
            <fileset dir="${sample2.dir}/schema"/>
        </copy>
    </target>
  
</project>
