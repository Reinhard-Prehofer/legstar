<assembly>

    <id>bin</id>

    <formats>
        <format>zip</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>

    <files>
        <file>
            <source>${project.basedir}/../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        </file>
        <file>
            <source>${project.basedir}/../legstar-coxbgen/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>NOTICE</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-coxbgen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>README</destName>
        </file>
    </files>

    <fileSets>
        <!-- sample java classes for pojo  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-xsdcgen-cases/src/main/java</directory>
            <outputDirectory>samples/quickstarts/proxy_pojo_jvmquery/src</outputDirectory>
            <includes>
                <include>**/jvmquery/*.*</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>