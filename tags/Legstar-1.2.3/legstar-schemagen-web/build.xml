<!-- =================================================================================
     This script deploys the schemagen-web application.
 -->
<project basedir="." default="deploy" name="deploy">
 
    <property name="webdir" value="c:/Program Files/Apache Software Foundation/Apache2.2"/>   
    <property name="cgisubdir" value="cgi-bin"/>
    <property name="htmsubdir" value="htdocs"/>
    <property name="webapp" value="legstar/legstar-schemagen-web"/>
    
    <target name="deploy">
        <mkdir dir="${webdir}/${cgisubdir}/${webapp}"/> 
        <mkdir dir="${webdir}/${htmsubdir}/${webapp}"/> 
        <copy todir="${webdir}/${cgisubdir}/${webapp}">
            <fileset dir="${basedir}/WebContent">
                <include name="*.cgi"/>
            </fileset>
        </copy>
        <copy todir="${webdir}/${htmsubdir}/${webapp}">
            <fileset dir="${basedir}/WebContent">
                <include name="*.html"/>
                <include name="*.css"/>
            </fileset>
        </copy>
        <copy todir="${webdir}/${cgisubdir}/${webapp}">
            <fileset dir="${basedir}/../legstar-schemagen/target/bin">
                <include name="*.dll"/>
                <include name="*.exe"/>
            </fileset>
        </copy>
    </target>
    
</project>
