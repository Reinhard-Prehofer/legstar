<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>Legstar</artifactId>
        <version>1.4.4</version>
    </parent>
    <version>1.4.4</version>
    <artifactId>legstar-distribution</artifactId>
    <name>LegStar Distribution</name>
    <packaging>pom</packaging>
    <description>Used to create a single distribution for the entire LegStar project.</description>
    <url>http://www.legsem.com/legstar</url>

    <dependencies>
        <dependency>
            <groupId>com.legsem.legstar</groupId>
            <artifactId>legstar-cixsgen</artifactId>
        </dependency>
    </dependencies>

    <build>
        
        <plugins>
        
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
      
                <executions>

                    <!-- Unzip the cob2xsd distributable to a packaging location.  -->
                    <execution>
                        <id>unzip-cob2xsd</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/unzip-cob2xsd.xml">
                                    <property name="maven.localRepository" value="${settings.localRepository}" />
                                    <property name="legstarCob2XsdVersion" value="${legstarCob2XsdVersion}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <!-- Unpack sources from distributed modules
                     (unpack-dependencies does not work because of : http://jira.codehaus.org/browse/MDEP-291 .  -->
                    <execution>
                        <id>unjar-source</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <unjar src="${basedir}/../legstar-c2wsrt/target/legstar-c2wsrt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-chttprt/target/legstar-chttprt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cixsgen/target/legstar-cixsgen-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cixsgen-model/target/legstar-cixsgen-model-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cmockrt/target/legstar-cmockrt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cmqrt/target/legstar-cmqrt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cob2trans/target/legstar-cob2trans-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-cobcgen/target/legstar-cobcgen-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-config/target/legstar-config-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-coxbgen/target/legstar-coxbgen-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-coxbrt/target/legstar-coxbrt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-csokrt/target/legstar-csokrt-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-engine/target/legstar-engine-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-invoker/target/legstar-invoker-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-jaxbgen/target/legstar-jaxbgen-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-messaging/target/legstar-messaging-${version}-sources.jar" dest="${project.build.directory}/sources" />
                                <unjar src="${basedir}/../legstar-xsdcgen/target/legstar-xsdcgen-${version}-sources.jar" dest="${project.build.directory}/sources" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <!-- This will check that the distribution file is valid. -->
                    <execution>
                        <id>test-distribution</id>
                        <phase>integration-test</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/../legstar-tests/src/test/ant/build-tomcat-stop.xml">
                                    <property name="tomcat.home" value="${legstar-dev-tomcat-home}" />
                                    <property name="tomcat.base" value="${legstar-dev-tomcat-base}" />
                                </ant>
                                <ant antfile="${basedir}/../legstar-tests/src/test/ant/build-tomcat-start.xml">
                                    <property name="tomcat.home" value="${legstar-dev-tomcat-home}" />
                                    <property name="tomcat.base" value="${legstar-dev-tomcat-base}" />
                                </ant>
                                <ant antfile="${basedir}/src/main/ant/test-distribution.xml" />
                                <ant antfile="${basedir}/../legstar-tests/src/test/ant/build-tomcat-stop.xml">
                                    <property name="tomcat.home" value="${legstar-dev-tomcat-home}" />
                                    <property name="tomcat.base" value="${legstar-dev-tomcat-base}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <!-- Generate site files that needs automatic update. -->
                    <execution>
                        <id>build-site</id>
                        <phase>pre-site</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/gen-index-xml.xml">
                                    <property name="legstarVersion" value="${version}" />
                                    <property name="legstarCob2XsdVersion" value="${legstarCob2XsdVersion}" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                </executions>
            </plugin>

             <!-- Assembly generation plugin.  -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId> 
                <executions>

                    <execution>
                        <id>assemble-binaries</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assemble/distribution.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>

                    <execution>
                        <id>assemble-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assemble/distribution-sources.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
        
            <plugin>
                <groupId>com.agilejava.docbkx</groupId>
                <artifactId>docbkx-maven-plugin</artifactId>
                <executions>

                    <!-- Produce a readme file to be included with distribution -->
                    <execution>
                        <id>build-readme</id>
                        <goals>
                            <goal>generate-html</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <sourceDirectory>src/site/docbook</sourceDirectory>
                            <targetDirectory>target/doc</targetDirectory>
                            <includes>install-instructions.xml</includes>
                            <chunkedOutput>false</chunkedOutput>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
    
</project>