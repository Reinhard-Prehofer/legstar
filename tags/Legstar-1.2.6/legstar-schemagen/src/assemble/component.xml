<component>

    <fileSets>

        <!-- Win32 dlls  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/target/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.dll</include>
            </includes>
        </fileSet>
        
        <!-- Linux shared objects  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/src/main/usrlib</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.so</include>
            </includes>
        </fileSet>
        
        <!-- ant scripts  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-schemagen/src/main/resources/ant</directory>
            <outputDirectory>samples/quickstarts/adapter_lsfileae</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>

    </fileSets>
  
    <files>
        <!-- Cobol sample. The name is lowercased to ease build-cob2xs.xml  -->
        <file>
            <source>${project.basedir}/../legstar-schemagen/src/test/cobol/LSFILEAE</source>
            <outputDirectory>samples/quickstarts/adapter_lsfileae/cobol</outputDirectory>
            <destName>lsfileae.cbl</destName>
         </file>
        
    </files>

</component>