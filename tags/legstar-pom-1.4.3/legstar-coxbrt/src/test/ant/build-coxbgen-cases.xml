<!-- =================================================================================
     This script copies custom choice classes to the coxbgen cases project.
 -->
<project basedir="../../.." default="buildCoxbgenCases" name="build-coxbgen-cases">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
	<target name="init">
		
		<!-- Source location for custom choice code  -->
		<property name="cust.src.dir" value="${basedir}/src/test/cust/java"/>
		<!-- Target location for COXB sources   -->
		<property name="coxb.src.dir" value="${basedir}/../legstar-coxbgen-cases/src/main/java"/>
		<!-- Relative path to custom choice sources  -->
	 	<property name="cust.loc" value="com/legstar/coxb/cust" />
		
	</target>

	<!-- ===========================================================  -->
	<!-- Copy custom choice code to coxbgen-cases
	  -->
	<target name="buildCoxbgenCases" depends="init">
		<delete dir="${coxb.src.dir}/${cust.loc}" includeEmptyDirs="true" quiet="true"/>
		<copy todir="${coxb.src.dir}">
			<fileset dir="${cust.src.dir}"/>
		</copy>
	</target>
	
</project>
