<!-- =================================================================================
     This script creates the common distribution for all LegStar modules.
 -->
<project basedir="../../.." default="deployToTomcat" name="deploy-to-tomcat">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
	<target name="init">
		
		<!-- Tomcat destination  -->
	 	<property name="tomcat.lib" value="C:\Program Files\Apache\apache-tomcat-5.5.17\shared\lib" />

	</target>

	<!-- ===========================================================  -->
	<!-- Copy to Shared/lib
	  -->
	<target name="deployToTomcat" depends="init">
		
		<copy todir="${tomcat.lib}">
			<fileset dir="${basedir}/../legstar-chttprt/target" includes="*.jar" excludes="*sources.jar"/>
			<fileset dir="${basedir}/../legstar-coxbrt/target" includes="*.jar" excludes="*sources.jar"/>
			<fileset dir="${basedir}/../legstar-csokrt/target" includes="*.jar" excludes="*sources.jar"/>
			<fileset dir="${basedir}/../legstar-engine/target" includes="*.jar" excludes="*sources.jar"/>
			<fileset dir="${basedir}/../legstar-invoker/target" includes="*.jar" excludes="*sources.jar"/>
			<fileset dir="${basedir}/../legstar-messaging/target" includes="*.jar" excludes="*sources.jar"/>
		</copy>

	</target>
	
</project>
