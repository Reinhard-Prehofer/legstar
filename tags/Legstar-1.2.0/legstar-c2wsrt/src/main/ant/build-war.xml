<!-- =================================================================================
     This script builds war files for the c2ws proxy samples servlet.
 -->
<project basedir="../../.." default="buildWars" name="build-war">

	<!-- ===========================================================  -->
	<!-- Build the war files including lib
	  -->
	<target name="buildWars">
		<war destfile="${basedir}/target/c2ws-cultureinfo.war" webxml="${basedir}/examples/src/main/webapp/cultureinfo/WEB-INF/web.xml">
            <classes dir="${basedir}/../legstar-jaxbgen-cases/target/classes" includes="**/cultureinfo/**/*.class"/>
        </war>
		<war destfile="${basedir}/target/c2ws-MSNSearch.war" webxml="${basedir}/examples/src/main/webapp/MSNSearch/WEB-INF/web.xml">
            <classes dir="${basedir}/../legstar-jaxbgen-cases/target/classes" includes="**/MSNSearch/**/*.class"/>
        </war>
	</target>
	
</project>
