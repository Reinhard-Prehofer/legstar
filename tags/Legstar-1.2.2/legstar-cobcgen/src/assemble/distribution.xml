<assembly>
    <id>bin</id>
    
    <formats>
        <format>zip</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>

    <fileSets>
    
        <!-- The sample Binding classes -->
        <fileSet>
            <directory>${project.basedir}/../legstar-samples/src</directory>
            <outputDirectory>src</outputDirectory>
            <includes>
                <include>**/cultureinfo/**/*.java</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../legstar-samples/target</directory>
            <outputDirectory>target</outputDirectory>
            <includes>
                <include>**/cultureinfo/**/*.class</include>
            </includes>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>