<!-- =================================================================================
     This script copies previous releases assembly into the distribution folder.
 -->
<project basedir="../../.." default="copyOldVersions" name="copy-old-versions">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
	<target name="init">
		
		<!-- Local distribution folder  -->
	 	<property name="dist.dir" value="${basedir}/src/site/resources/binaries" />
		<!-- Version 0.0.1 distribution folder  -->
	 	<property name="v001.dir" value="${basedir}/../../v0.0.1/src/site/resources/binaries" />

	</target>

	<!-- ===========================================================  -->
	<!-- Copy to local distribution folder
	  -->
	<target name="copyOldVersions" depends="init">
		
		<copy todir="${dist.dir}">
			<fileset dir="${v001.dir}"/>
		</copy>

	</target>
	
</project>
