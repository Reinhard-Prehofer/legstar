<!-- =================================================================================
     This script builds a war file for the c2ws gateway servlet .
 -->
<project basedir="../../.." default="buildWar" name="build-war">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
	<target name="init">
		
		<!-- Target war file  -->
	 	<property name="target.war.file" value="${basedir}/target/legstar-c2wsrt.war" />
		<!-- Web.xml file  -->
	 	<property name="web.xml.file" value="${basedir}/src/main/webapp/WEB-INF/web.xml" />
		
	</target>

	<!-- ===========================================================  -->
	<!-- Build the war file including lib and sample
	  -->
	<target name="buildWar" depends="init">
		<war destfile="${target.war.file}" webxml="${web.xml.file}">
            <lib dir="target" includes="*.jar" excludes="*sources.jar"/>
            <classes dir="${basedir}/../legstar-jaxbgen-cases/target/classes" includes="**/cultureinfo/**/*.class"/>
            <classes dir="src/site/resources/samples" excludes="*.svn"/>
        </war>
	</target>
	
</project>
