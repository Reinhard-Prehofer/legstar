<!-- =================================================================================
     This script deploys war files to a Tomcat instance.
 -->
<project basedir="../../.." default="deployToTomcat" name="deploy-to-tomcat">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
    <property file="../legstar-dev.properties"/>   
	<target name="init">
		
		<!-- Tomcat destination  -->
	 	<property name="tomcat.lib" value="${tomcat.dir}\shared\lib" />

	</target>

	<!-- ===========================================================  -->
	<!-- The c2ws proxy is bundled in a jar that goes to shared/lib.
	     Generated proxies will come with a web.xml that references
	     the servlet class from that lib.
	  -->
	<target name="deployToTomcat" depends="init">
		
		<copy todir="${tomcat.lib}">
			<fileset dir="${basedir}//target" includes="*.jar" excludes="*sources.jar"/>
		</copy>

	</target>
	
</project>
