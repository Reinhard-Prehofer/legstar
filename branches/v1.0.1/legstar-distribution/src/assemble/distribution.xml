<assembly>
  <id>win32</id>
  <formats>
    <format>zip</format>
  </formats>
  
  <fileSets>
  
    <!-- Non-java binaries -->
    <fileSet>
      <directory>../legstar-schemagen/target/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.dll</include>
      </includes>
    </fileSet>
    
    <!-- Ant scripts -->
    <fileSet>
      <directory>../legstar-schemagen/src/main/resources/ant</directory>
      <outputDirectory>ant</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../legstar-coxbgen/src/main/resources/ant</directory>
      <outputDirectory>ant</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../legstar-cixsgen/src/main/resources/ant</directory>
      <outputDirectory>ant</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    
    <!-- The sample COBOL file -->
    <fileSet>
      <directory>../legstar-schemagen/src/main/resources/cobol</directory>
      <outputDirectory>cobol</outputDirectory>
      <includes>
        <include>LSFILEAE.CBL</include>
      </includes>
    </fileSet>
    
    <!-- The sample XML Schema -->
	<fileSet>
	  <directory>../legstar-samples/schema</directory>
	  <outputDirectory>schema</outputDirectory>
	  <includes>
	    <include>*.xsd</include>
	  </includes>
	</fileSet>
    
    <!-- The sample Binding classes -->
    <fileSet>
      <directory>../legstar-samples/src</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../legstar-samples/target</directory>
      <outputDirectory>target</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    
  </fileSets>
  
  <files>
    <file>
       <!-- Include the invoker configuration file -->
       <source>../legstar-invoker/src/site/resources/samples/config.xml</source>
       <outputDirectory>/samples/</outputDirectory>
    </file>
    <file>
       <!-- Include the engine configuration file -->
       <source>../legstar-engine/src/site/resources/samples/config.xml</source>
       <outputDirectory>/samples/</outputDirectory>
       <destName>config-engine.xml</destName>
    </file>
    <file>
       <!-- Include the engine servlet war file -->
       <source>../legstar-engine/target/legstar-engine.war</source>
       <outputDirectory>/war/</outputDirectory>
    </file>
    <file>
       <source>../legstar-schemagen/LICENSE</source>
       <outputDirectory>/</outputDirectory>
       <destName>LICENSE</destName>
    </file>
    <file>
       <source>${basedir}/src/site/apt/release-notes.apt</source>
       <outputDirectory>/</outputDirectory>
       <destName>README</destName>
    </file>
    <file>
       <source>../legstar-schemagen/src/site/apt/release-notes.apt</source>
       <outputDirectory>/</outputDirectory>
       <destName>README-SCHEMAGEN</destName>
    </file>
    <file>
       <source>../legstar-coxbgen/src/site/apt/release-notes.apt</source>
       <outputDirectory>/</outputDirectory>
       <destName>README-COXBGEN</destName>
    </file>
    <file>
       <source>../legstar-cixsgen/src/site/apt/release-notes.apt</source>
       <outputDirectory>/</outputDirectory>
       <destName>README-CIXSGEN</destName>
    </file>
    <file>
       <source>../legstar-schemagen/NOTICE</source>
       <outputDirectory>/</outputDirectory>
       <destName>NOTICE-SCHEMAGEN</destName>
    </file>
    <file>
       <source>../legstar-coxbgen/NOTICE</source>
       <outputDirectory>/</outputDirectory>
       <destName>NOTICE-COXBGEN</destName>
    </file>
    <file>
       <source>../legstar-cixsgen/NOTICE</source>
       <outputDirectory>/</outputDirectory>
       <destName>NOTICE-CIXSGEN</destName>
    </file>
  </files>
    
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  
</assembly>