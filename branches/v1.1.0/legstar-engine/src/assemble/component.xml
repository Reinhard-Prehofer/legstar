<component>
 
    <fileSets>
    
        <!-- Sample configuration files for the engine -->
        <fileSet>
            <directory>../legstar-engine/src/site/resources/samples</directory>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <!-- Also provide a sample invoker configuration file -->
        <fileSet>
            <directory>../legstar-invoker/src/site/resources/samples</directory>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    
    </fileSets>
  
    <files>
        <file>
            <source>../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        </file>
        <file>
            <source>../legstar-engine/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>engine-NOTICE</destName>
        </file>
        <file>
           <source>../legstar-engine/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>engine-README</destName>
        </file>
        <!-- Include the servlet war file -->
        <file>
           <source>../legstar-engine/target/legstar-engine.war</source>
           <outputDirectory>/war/</outputDirectory>
        </file>
    </files>
  
</component>