<assembly>

    <id>bin</id>

    <formats>
        <format>zip</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>src/assemble/component.xml</componentDescriptor>
    </componentDescriptors>

    <files>
        <file>
            <source>${project.basedir}/../legstar-distribution/LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
        </file>
        <file>
            <source>${project.basedir}/../legstar-coxbgen/NOTICE</source>
            <outputDirectory>/</outputDirectory>
            <destName>NOTICE</destName>
        </file>
        <file>
           <source>${project.basedir}/../legstar-coxbgen/src/site/apt/release-notes.apt</source>
           <outputDirectory>/</outputDirectory>
           <destName>README</destName>
        </file>
        <!-- cob2xsd sample COBOL source -->
        <file>
            <source>${project.build.directory}/package/legstar-cob2xsd/cobol/LSFILEAE</source>
            <outputDirectory>samples/quickstarts/adapter_lsfileae/cobol</outputDirectory>
           <destName>lsfileae</destName>
        </file>

        <!-- cob2xsd sample ant script -->
        <file>
            <source>${project.basedir}/../legstar-distribution/src/main/resources/ant/build-cob2xsd.xml</source>
            <outputDirectory>samples/quickstarts/adapter_lsfileae</outputDirectory>
        </file>

    </files>

    <fileSets>
        <!-- sample java classes for pojo  -->
        <fileSet>
            <directory>${project.basedir}/../legstar-xsdcgen-cases/src/main/java</directory>
            <outputDirectory>samples/quickstarts/proxy_pojo_jvmquery/src</outputDirectory>
            <includes>
                <include>**/jvmquery/*.*</include>
            </includes>
        </fileSet>
        <!-- cob2xsd dependencies -->
        <fileSet>
            <directory>${project.build.directory}/package/legstar-cob2xsd/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>legstar-cob2xsd-*.jar</include>
                <include>antlr-runtime-*.jar</include>
                <include>commons-cli-*.jar</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
  
</assembly>