<!-- =================================================================================
     Creates a local Web Site with all LegStar modules sites.
 -->
<project basedir="../.." default="copyLocalSite" name="copy-local-site">

	<!-- ===========================================================  -->
	<!-- Setup environment
	  -->
	<target name="init">
		
		<!-- Local destination  -->
	 	<property name="local.root" value="C:\Program Files\Apache Software Foundation\Apache2.2\htdocs\legstar" />

	</target>

	<!-- ===========================================================  -->
	<!-- Copy to local root
	  -->
	<target name="copyLocalSite" depends="init">
		
		<copy todir="${local.root}/modules/legstar-c2wsrt">
			<fileset dir="${basedir}/../legstar-c2wsrt/target/site"/>
		</copy>
