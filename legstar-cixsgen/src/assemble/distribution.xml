<assembly>
	<id>bin</id>
	<formats>
	  <format>zip</format>
	</formats>
	
	<fileSets>
	
		<fileSet>
		  <includes>
		    <include>LICENSE*</include>
		    <include>NOTICE*</include>
		  </includes>
		</fileSet>
		
		<!-- Ant scripts -->
		<fileSet>
		  <directory>src/main/resources/ant</directory>
		  <outputDirectory>ant</outputDirectory>
		  <includes>
		    <include>*.xml</include>
		  </includes>
		</fileSet>
		
		<!-- The product main jar file -->
		<fileSet>
		  <directory>target</directory>
		  <outputDirectory>lib</outputDirectory>
		  <includes>
		    <include>*.jar</include>
		  </includes>
		  <excludes>
		    <exclude>*sources.jar</exclude>
		  </excludes>
		</fileSet>
		
		<!-- Sample connectivity parameters properties files -->
		<fileSet>
		  <directory>../legstar-cixsrt/src/site/resources/samples</directory>
		  <outputDirectory>/samples</outputDirectory>
		  <includes>
		    <include>**</include>
		  </includes>
		</fileSet>
		
		<!-- Sample Web Service descriptor using a SOAP handler -->
		<fileSet>
		  <directory>src/site/resources/samples</directory>
		  <outputDirectory>/samples</outputDirectory>
		  <includes>
		    <include>**</include>
		  </includes>
		</fileSet>
		
		<!-- The sample COXB classes -->
		<fileSet>
		  <directory>../legstar-samples/src</directory>
		  <outputDirectory>src</outputDirectory>
		  <includes>
		    <include>**</include>
		  </includes>
		</fileSet>
		<fileSet>
		  <directory>../legstar-samples/target</directory>
		  <outputDirectory>target</outputDirectory>
		  <includes>
		    <include>**</include>
		  </includes>
		</fileSet>
		
	</fileSets>
 	
	<files>
		<file>
		   <source>${basedir}/src/site/apt/release-notes.apt</source>
		   <outputDirectory>/</outputDirectory>
		   <destName>README</destName>
		</file>
	</files>
	  
	<dependencySets>
		<dependencySet>
	    <outputDirectory>/lib/</outputDirectory>
	    <unpack>false</unpack>
	    <scope>runtime</scope>
	  </dependencySet>
	</dependencySets>
  
</assembly>