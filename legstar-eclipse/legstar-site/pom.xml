<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.legsem.legstar</groupId>
        <artifactId>legstar-eclipse</artifactId>
        <version>1.4.5-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <version>1.4.5-SNAPSHOT</version>
    <artifactId>legstar-site</artifactId>
    <packaging>jar</packaging>
    <name>LegStar Eclipse site</name>
    <description>Eclipse site.</description>

    <build>

        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>site.xml</include>
                    <include>publish.bat</include>
                </includes>
                 <!-- PDE expects this file at the root -->
                <targetPath>${project.basedir}</targetPath>
            </resource>
        </resources>

        <plugins>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <!-- Populate Eclipse P2 site -->
                        <id>populate-site</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${basedir}/src/main/ant/populate-site.xml" />
                                <exec dir="${basedir}" executable="${project.basedir}/publish.bat" failonerror="true" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        
        </plugins>
    
    </build>
    
</project>